<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.admin.HomeMilho">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAlignment="center"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        android:textColor="@color/primaryColor"
        android:textSize="30sp"
        android:text="@string/pratylenchus"
        android:textStyle="italic"/>

    <LinearLayout
        android:id="@+id/homilho_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="150dp"
        android:orientation="vertical"
        android:background="@drawable/button_shape">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/primaryDarkColor"
            android:textSize="15sp"
            android:text="@string/esp_cies"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/brachyurus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:elevation="4dp"
            android:minHeight="100dp"
            android:text="@string/brachyurus"
            android:textStyle="italic"
            android:textColor="#6F6F6F" />
        <Button
            android:id="@+id/zeae"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:minHeight="100dp"
            android:background="@drawable/button_shape"
            android:elevation="4dp"
            android:text="@string/zeae"
            android:textStyle="italic"
            android:textColor="#6F6F6F" />


    </LinearLayout>



</FrameLayout>