<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Contato"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/activity_contato">


    <LinearLayout
        android:id="@+id/melodoll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="150dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvcontent"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="25dp"
            android:text="Elaboradores do ConteÃºdo"
            android:textAlignment="center"
            android:textColor="@color/primaryColor"
            android:textSize="30sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="370dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="15dp"
            android:elevation="10dp">

            <TextView
                android:id="@+id/info_text1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/rodrigo"
                android:paddingHorizontal="30dp"
                android:gravity="start|center_vertical"
                android:textSize="17sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="370dp"
            android:layout_height="200dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="15dp"
            android:elevation="10dp">

            <TextView
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/prof"
                android:paddingHorizontal="30dp"
                android:gravity="start|center_vertical"
                android:textSize="17sp" />
        </android.support.v7.widget.CardView>



        <LinearLayout
            android:id="@+id/heteroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDev"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="25dp"
                android:text="Desenvolvedores"
                android:textAlignment="center"
                android:textColor="@color/primaryColor"
                android:textSize="30sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="370dp"
                android:layout_height="230dp"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:layout_marginBottom="30dp"
                android:paddingVertical="20dp"
                card_view:cardCornerRadius="15dp">
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="10dp"
                    card_view:srcCompat="@drawable/phael" />

                <TextView
                    android:id="@+id/info_text2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="start|center_vertical|bottom"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="30dp"
                    android:text="@string/phael"
                    android:textSize="17sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view6"
                android:layout_width="370dp"
                android:layout_height="230dp"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:paddingVertical="20dp"
                card_view:cardCornerRadius="15dp">
                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="top|center"
                    card_view:srcCompat="@drawable/omupa" />

                <TextView
                    android:id="@+id/info_text6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="start|center_vertical|bottom"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="30dp"
                    android:text="@string/omupa"
                    android:textSize="17sp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>